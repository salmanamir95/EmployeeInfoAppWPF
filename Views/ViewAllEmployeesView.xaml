<UserControl x:Class="EmployeeInfoApp.Views.ViewAllEmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Cyberpunk Color Palette -->
        <SolidColorBrush x:Key="NeonGreen" Color="#39FF14"/>
        <SolidColorBrush x:Key="NeonPink" Color="#FF00FF"/>
        <SolidColorBrush x:Key="NeonBlue" Color="#00FFFF"/>
        <SolidColorBrush x:Key="DarkCard" Color="#121212"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HintColor" Color="#999999"/>

        <!-- Futuristic Typography -->
        <FontFamily x:Key="CyberFont">Segoe UI, Arial</FontFamily>
        <FontFamily x:Key="HeaderFont">Orbitron, Segoe UI, Arial</FontFamily>

        <!-- Glow Effects -->
        <DropShadowEffect x:Key="NeonGlow" BlurRadius="15" Color="#39FF14" Opacity="0.8" ShadowDepth="0"/>
        <DropShadowEffect x:Key="NeonPinkGlow" BlurRadius="15" Color="#FF00FF" Opacity="0.6" ShadowDepth="0"/>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource NeonBlue}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="FontFamily" Value="{StaticResource HeaderFont}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="#00FFFF" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Template -->
        <ControlTemplate x:Key="CyberButtonTemplate" TargetType="Button">
            <Border x:Name="border" 
                    Background="Transparent"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
                <Grid>
                    <ContentPresenter x:Name="content" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    <Rectangle x:Name="glowRect" 
                               Opacity="0" 
                               Fill="{TemplateBinding BorderBrush}" 
                               RadiusX="2" RadiusY="2"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="#1139FF14"/>
                    <Setter TargetName="glowRect" Property="Opacity" Value="0.3"/>
                    <Setter TargetName="glowRect" Property="Effect" Value="{StaticResource NeonGlow}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="content" Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="glowRect" Property="Opacity" Value="0.6"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Button Style -->
        <Style x:Key="CyberButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeonGreen}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonGreen}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource HeaderFont}"/>
            <Setter Property="Template" Value="{StaticResource CyberButtonTemplate}"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="CyberDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource DarkCard}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonPink}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#1E1E1E"/>
            <Setter Property="AlternatingRowBackground" Value="#1A1A1A"/>
            <Setter Property="FontFamily" Value="{StaticResource CyberFont}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style x:Key="CyberDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource NeonGreen}"/>
            <Setter Property="Foreground" Value="#0D0D0D"/>
            <Setter Property="FontFamily" Value="{StaticResource HeaderFont}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Effect" Value="{StaticResource NeonGlow}"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="CyberDataGridCell" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#333366"/>
                    <Setter Property="Foreground" Value="{StaticResource NeonBlue}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#0D0D0D">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
            <Border Background="{StaticResource DarkCard}"
                    BorderBrush="{StaticResource NeonPink}"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="25"
                    MaxWidth="800"
                    HorizontalAlignment="Center"
                    Effect="{StaticResource NeonPinkGlow}">

                <StackPanel>
                    <!-- Cyberpunk Title -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock Text="LIST OF ALL EMPLOYEES"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource NeonGreen}"
                                   FontFamily="{StaticResource HeaderFont}"
                                   Effect="{StaticResource NeonGlow}"/>
                        <Rectangle Height="2" Fill="{StaticResource NeonGreen}" Margin="0,5,0,0" Opacity="0.7"/>
                    </StackPanel>

                    <!-- DataGrid for Employee List -->
                    <DataGrid ItemsSource="{Binding Employees}"
                              Style="{StaticResource CyberDataGrid}"
                              ColumnHeaderStyle="{StaticResource CyberDataGridColumnHeader}"
                              CellStyle="{StaticResource CyberDataGridCell}"
                              Margin="0,10,0,20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Father's Name" Binding="{Binding FatherName}" Width="*"/>
                            <DataGridTextColumn Header="CNIC" Binding="{Binding cnic}" Width="120"/>
                            <DataGridTextColumn Header="Designation" Binding="{Binding Designation}" Width="*"/>
                            <DataGridTextColumn Header="DOB" Binding="{Binding DOB, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Manager" Binding="{Binding Manager}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Back Button -->
                    <Button Content="BACK"
                            Style="{StaticResource CyberButton}"
                            Margin="0,20,0,10"
                            HorizontalAlignment="Center"
                            Click="BackButton_Click"/>

                    <!-- Cyberpunk Terminal Footer -->
                    <Grid Margin="0,20,0,0">
                        <Rectangle Height="1" Fill="#333" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="CYBER SYSTEMS INC © 2077"
                                   Foreground="#444"
                                   FontFamily="{StaticResource HeaderFont}"
                                   FontSize="10"
                                   HorizontalAlignment="Center"
                                   Background="{StaticResource DarkCard}"
                                   Padding="10,0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>