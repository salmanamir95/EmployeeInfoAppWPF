<UserControl x:Class="EmployeeInfoApp.Views.HomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeInfoApp.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Cyberpunk Color Palette -->
        <SolidColorBrush x:Key="NeonGreen" Color="#39FF14"/>
        <SolidColorBrush x:Key="NeonPink" Color="#FF00FF"/>
        <SolidColorBrush x:Key="NeonBlue" Color="#00FFFF"/>
        <SolidColorBrush x:Key="DarkCard" Color="#121212"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HintColor" Color="#999999"/>

        <!-- Futuristic Typography -->
        <FontFamily x:Key="CyberFont">Segoe UI, Arial</FontFamily>
        <FontFamily x:Key="HeaderFont">Orbitron, Segoe UI, Arial</FontFamily>

        <!-- Glow Effects -->
        <DropShadowEffect x:Key="NeonGlow" BlurRadius="15" Color="#39FF14" Opacity="0.8" ShadowDepth="0"/>
        <DropShadowEffect x:Key="NeonPinkGlow" BlurRadius="15" Color="#FF00FF" Opacity="0.6" ShadowDepth="0"/>

        <!-- Button Template -->
        <ControlTemplate x:Key="CyberButtonTemplate" TargetType="Button">
            <Border x:Name="border" 
                    Background="Transparent"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2">
                <Grid>
                    <ContentPresenter x:Name="content" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    <Rectangle x:Name="glowRect" 
                               Opacity="0" 
                               Fill="{TemplateBinding BorderBrush}" 
                               RadiusX="2" RadiusY="2"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="#1139FF14"/>
                    <Setter TargetName="glowRect" Property="Opacity" Value="0.3"/>
                    <Setter TargetName="glowRect" Property="Effect" Value="{StaticResource NeonGlow}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="content" Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="glowRect" Property="Opacity" Value="0.6"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Button Style -->
        <Style x:Key="CyberButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeonGreen}"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonGreen}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="{StaticResource HeaderFont}"/>
            <Setter Property="Template" Value="{StaticResource CyberButtonTemplate}"/>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Fade in opacity -->
                    <DoubleAnimation Storyboard.TargetName="RootGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:2"/>
                    <!-- Background color transition -->
                    <ColorAnimation Storyboard.TargetName="RootGrid"
                                    Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                    From="White" To="#0D0D0D"
                                    Duration="0:0:2"
                                    AutoReverse="False"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid x:Name="RootGrid" Background="#0D0D0D" Opacity="0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="560" Margin="20">
            <!-- Wide neon heading -->
            <TextBlock Text="Employee Information Portal"
                       FontSize="36"
                       FontFamily="Segoe UI Semibold"
                       FontWeight="Bold"
                       Foreground="#39FF14" 
                       HorizontalAlignment="Center"
                       Width="560"
                       TextAlignment="Center"
                       TextWrapping="NoWrap"
                       Margin="0,0,0,30" />

            <!-- Cyberpunk-style buttons -->
            <Button Content="➕  Add New Employee"
                    Style="{StaticResource CyberButton}"
                    Margin="0,0,0,10"
                    Click="AddEmployeeButton_Click" />

            <Button Content="📋  List of All Employees"
                    Style="{StaticResource CyberButton}"
                    Click="ViewEmployeesButton_Click" />
        </StackPanel>
    </Grid>
</UserControl>